server {

	ssl   on;
	ssl_certificate    /etc/ssl/certs/cert.pem;
	ssl_certificate_key    /etc/ssl/certs/privkey.pem;

	listen 443 ;
  	listen 80 ;
	listen [::]:80 ;
  
	root /var/www/html;

	index index.html index.htm;

	location / {
                limit_except GET {
                   deny  all;
                }

		try_files $uri $uri/ =404;

	}

}
